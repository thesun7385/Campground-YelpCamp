<!-- All content below will be passed to the boilerplate -->
<% layout('/layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">Correct!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">Correct!</div>
      </div>
      <!-- uploadimg images -->
      <div class="custom-file mb-3">
        <label for="image" class="form-label">Image</label>
        <input
          class="form-control custom-file-label"
          type="file"
          id="image"
          name="image"
          multiple
          required
        />
        <div class="valid-feedback">Correct!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            required
          />
          <div class="valid-feedback">Correct!t!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Correct!!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>

    <div class="mb-3">
      <button
        class="btn btn-info"
        onclick="window.location.href='/campgrounds'"
      >
        All Campgrounds
      </button>
    </div>
  </div>
</div>
